# Security Service Environment Variables

# Server
PORT=4000
NODE_ENV=production

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-super-secret-password
DB_NAME=postgres

# JWT Secret (für Service-zu-Service Kommunikation)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
JWT_EXPIRY=15m

# Mailgun API (für E-Mail Versand)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.shopmarkets.app
MAILGUN_FROM=security@shopmarkets.app

# Rate Limiting
MAX_FAILED_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=15

# Code Settings
CODE_EXPIRY_MINUTES=10
CODE_LENGTH=6

# TOTP Settings
TOTP_WINDOW=1
TOTP_STEP=30

# App Settings
APP_NAME=ShopMarkets
APP_DOMAIN=shopmarkets.app
SUPPORT_EMAIL=support@shopmarkets.app
